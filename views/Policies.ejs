  <body>
    <style>
      .gradient-custom {
        background: #f093fb;
        background: -webkit-linear-gradient(to bottom right, rgb(255, 255, 255), rgb(0, 0, 255));
        background: linear-gradient(to bottom right, rgb(255, 255, 255), rgb(0, 0, 255))
      }
    </style>


    <section class="vh-100 gradient-custom">
      <%- include('header') %>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <h1><%= companyName %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h4>Policies</h4>
          <table class="table table-striped table-curved">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Insurer</th>
                <th scope="col">Broker</th>
                <th scope="col">Country</th>
                <th scope="col">Amount</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i = 0 ; i <= Policies.length-1;  i++ ) { %>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= Policies[i].insured_name %></td>
                <td><%= Policies[i].broker_id %></td>
                <td><%= Policies[i].country_id %></td>
                <td><%= Policies[i].gross_amt %></td>
                <td><%= Policies[i].status %></td>
                <td>
                  <div class="btn-group" role="group" aria-label="Basic example">
                    <form action="/policies/accept" method="POST">
                      <input type="hidden" name="policyId" value=<%= Policies[i]._id %> />
                      <input type="hidden" name="masterPolicyId" value=<%= Id %> />
                      <input type="hidden" name="country_id" value="<%= Policies[i].country_id %>" />
                      <button type='submit' class="btn btn-outline-primary"><i class="material-icons">check</i></button>
                    </form>
                    &nbsp
                    &nbsp
                    <form action="/policies/modify" method="POST">
                      <input type="hidden" name="policyId" value=<%= Policies[i]._id %> />
                      <input type="hidden" name="masterPolicyId" value=<%= Id %> />
                      <input type="hidden" name="country_id" value="<%= Policies[i].country_id %>" />
                      <button type='submit' class="btn btn-outline-warning"><i class="material-icons">add_alert</i></button>
                    </form>
                    &nbsp
                    &nbsp
                    <form action="/policies/reject" method="POST">
                      <input type="hidden" name="policyId" value=<%= Policies[i]._id %> />
                      <input type="hidden" name="masterPolicyId" value=<%= Id %> />
                      <input type="hidden" name="country_id" value=<%= Policies[i].country_id %> />
                      <button type='submit' class="btn btn-outline-danger" ><i class="material-icons">delete</i></button>
                    </form>
                  </div>

                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
   

